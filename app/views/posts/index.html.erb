<h1>Student List</h1>
<% @posts.each do |post| %>
	<h2><%= link_to post.title,post  %></h2>
	
	<p><%= link_to "Edit", edit_post_path(post) %> |
	<%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %>
	</p>
	<hr/>
	<% end %>

	<p><%= link to "Add a new Post", new_post_path %></p>